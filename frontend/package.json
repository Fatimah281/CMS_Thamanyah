{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:shared": "ng build shared",
    "build:cms": "ng build cms",
    "build:discovery": "ng build discovery",
    "serve:cms": "ng serve cms --port 4200",
    "serve:discovery": "ng serve discovery --port 4201",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:cms": "ng test cms",
    "test:discovery": "ng test discovery",
    "lint": "ng lint",
    "lint:cms": "ng lint cms",
    "lint:discovery": "ng lint discovery",
    "serve:ssr:cms": "node dist/cms/server/server.mjs",
    "serve:ssr:discovery": "node dist/discovery/server/server.mjs"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.2.1",
    "@angular/cdk": "^20.2.0",
    "@angular/common": "^20.2.0",
    "@angular/compiler": "^20.2.0",
    "@angular/core": "^20.2.0",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^20.2.0",
    "@angular/material": "^20.2.0",
    "@angular/platform-browser": "^20.2.0",
    "@angular/platform-server": "^20.2.0",
    "@angular/router": "^20.2.0",
    "@angular/ssr": "^20.2.0",
    "axios": "^1.11.0",
    "express": "^5.1.0",
    "firebase": "^11.10.0",
